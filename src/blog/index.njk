---
layout: base.njk
title: Blog
---

<h1>Blog</h1>
<ul class="post-list">
  {%- for post in collections.post | reverse %}
  <li>
    <time datetime="{{ post.date | dateFormat('iso') }}">{{ post.date | dateFormat }}</time>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    {% if post.data.description %}<p>{{ post.data.description }}</p>{% endif %}
  </li>
  {%- endfor %}
</ul>
